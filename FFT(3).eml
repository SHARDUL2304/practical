clc;
clear all;
close all;
x = [1 0 2 4];
X = fft(x);
disp('X=');
disp(X);
xmag = abs(X);
disp('xmag=');
disp(xmag);
xang = angle(X);
disp('xang=');
disp(xang);
subplot(3,2,1);
stem(x);
xlabel('n ');
ylabel('Amplitude');
title('Discrete Signal');
subplot(3,2,2);
stem(xmag);
xlabel('k');
ylabel('Amplitude');
title('Discrete Magnitude Spectrum');
subplot(3,2,3);
stem(xang);
xlabel('k');
ylabel('Y-axis');
title('Discrete Phase Spectrum');
