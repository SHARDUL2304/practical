clc
x = [4 6 1 9]
h = [4 5 6]
N1 = length(x)
N2 = length(h)
N = max(N1, N2)
x = [x, zeros(N-N1)];
h = [h, zeros(N-N2)];
for n = 0:N-1
y(n+1) = 0;
for i = 0:N-1
j = mod(n-i, N);
y(n+1) = y(n+1)+x(i+1)*h(j+1);
end
end
n = 1:N;
disp('x(n) = ')
disp(x)
disp('h(n) = ')
disp(h)
disp('Output Sequence of Circular Convolution y(n) = ')
disp(y)
stem(n,y)
xlabel('Time')
ylabel('Amplitude')
title('Circular Convolution with aliasing')

